!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Soundcrowd"
      %meta{:content => content_for?(:description) ? yield(:description) : "Soundcrowd", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    /#container.container
    /  %header
    /    .row
    /      .twelve.columns
    /        = render 'layouts/navigation'
    /        = render 'layouts/messages'
    /        #main{:role => "main"}
    /          = yield
    /        %footer
    / ! end of #container
    %header
      .container
        .row
          /.twelve.columns
          .large-12.columns
            = render 'layouts/navigation'
            = render 'layouts/messages'
            #main{:role => "main"}
              = yield
            %footer
